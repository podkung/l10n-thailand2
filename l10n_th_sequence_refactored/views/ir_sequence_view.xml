<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="ir_sequence_form_inherit" model="ir.ui.view">
            <field name="name">sequence_view_inherit</field>
            <field name="model">ir.sequence</field>
            <field name="inherit_id" ref="base.sequence_view" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='use_date_range']" position="after">
                    <field name="range_date_selection" attrs="{'invisible': [('use_date_range', '=', False)], 'required': [('use_date_range', '=', True)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
