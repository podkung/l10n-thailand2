<odoo>
    <record id="provider_form_inherit_promptpay" model="ir.ui.view">
        <field name="name">Custom Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='payment_form']" position="after">
                <group string="PromptPay QR code" name="promptpay_group">
                    <field
                        name="qr_code_promptpay"
                        attrs="{'invisible': [('Provider', '!=', 'transfer')]}"
                    />
                    <field
                        name="promptpay_id"
                        attrs="{'invisible': [('Provider', '!=', 'transfer')]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
